@model FurnitureHouse.Models.Brand

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Are you sure you want to delete this Brand Details?</h1>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BrandName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BrandName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Traits)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Traits)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Material)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Material)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="BrandID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">View All Brand</a>
    </form>
</div>
