@model FurnitureHouse.Models.FurnitureInfo

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit Furniture Details</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FurnitureInfoID" />
            <input type="hidden" asp-for="Extension" />
            <div class="form-group">
                <label asp-for="FurnitureName" class="control-label"></label>
                <input asp-for="FurnitureName" class="form-control" />
                <span asp-validation-for="FurnitureName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OfferPrice" class="control-label"></label>
                <input asp-for="OfferPrice" class="form-control" />
                <span asp-validation-for="OfferPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FurnitureSubCategoryID" class="control-label"></label>
                <select asp-for="FurnitureSubCategoryID" class="form-control" asp-items="ViewBag.FurnitureSubCategoryID"></select>
                <span asp-validation-for="FurnitureSubCategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandID" class="control-label"></label>
                <select asp-for="BrandID" class="form-control" asp-items="ViewBag.BrandID"></select>
                <span asp-validation-for="BrandID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Furniture Details" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">View All Furniture</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
