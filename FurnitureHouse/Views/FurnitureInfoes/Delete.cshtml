@model FurnitureHouse.Models.FurnitureInfo

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Are You Sure To Remove This Furniture Details?</h1>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FurnitureName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FurnitureName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OfferPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OfferPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FurnitureSubCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FurnitureSubCategory.FurnitureSubCategoryName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand.BrandName)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FurnitureInfoID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">View All Furniture</a>
    </form>
</div>
