@model FurnitureHouse.Models.FurnitureInfo

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Add New Furniture Details</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FurnitureName" class="control-label"></label>
                <input asp-for="FurnitureName" class="form-control" />
                <span asp-validation-for="FurnitureName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OfferPrice" class="control-label"></label>
                <input asp-for="OfferPrice" class="form-control" />
                <span asp-validation-for="OfferPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FurnitureSubCategoryID" class="control-label"></label>
                <select asp-for="FurnitureSubCategoryID" class="form-control" asp-items="ViewBag.FurnitureSubCategoryID"></select>
            </div>
            <div class="form-group">
                <label asp-for="BrandID" class="control-label"></label>
                <select asp-for="BrandID" class="form-control" asp-items="ViewBag.BrandID"></select>
            </div>
            <div class="custom-file mb-3">
                <input asp-for="File.FormFile" type="file" class="custom-file-input" id="customFile">
                <label asp-for="File.FormFile" class="custom-file-label">Choose Any Image File</label>
                <span asp-validation-for="File.FormFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Furniture Details" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">View All Furniture</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}
