@model IEnumerable<FurnitureHouse.Models.FurnitureInfo>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">All Furniture Details</h1>

<p>
    <a class="btn btn-dark" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Photo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FurnitureName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfferPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                Sub Category
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/furnitures/@item.FurnitureInfoID@item.Extension" width="150px" height="150px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FurnitureName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfferPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FurnitureSubCategory.FurnitureSubCategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand.BrandName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.FurnitureInfoID">Edit</a> <br /><br />
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.FurnitureInfoID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
