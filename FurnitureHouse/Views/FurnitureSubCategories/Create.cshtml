@model FurnitureHouse.Models.FurnitureSubCategory

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Add New Furniture Sub Category Details</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FurnitureSubCategoryName" class="control-label"></label>
                <input asp-for="FurnitureSubCategoryName" class="form-control" />
                <span asp-validation-for="FurnitureSubCategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FurnitureCategoryID" class="control-label"></label>
                <select asp-for="FurnitureCategoryID" class ="form-control" asp-items="ViewBag.FurnitureCategoryID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Furniture Sub Category Details" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">View All Furniture Sub Category Details</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
